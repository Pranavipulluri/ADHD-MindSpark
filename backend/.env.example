# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mindspark_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mindspark_db
DB_USER=your_username
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@mindspark.com

# External APIs
OPENAI_API_KEY=your-openai-key-for-ai-features
ZOOM_API_KEY=your-zoom-api-key-for-video-calls
ZOOM_API_SECRET=your-zoom-api-secret

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PORT=3002
WS_ORIGINS=http://localhost:5173,https://yourdomain.com

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Storage Configuration
STORAGE_TYPE=local
AWS_REGION=us-east-1
AWS_BUCKET_NAME=mindspark-files
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
ENABLE_CHAT=true
ENABLE_VIDEO_CALLS=true
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_GAMIFICATION=true